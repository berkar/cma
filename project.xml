  <build>
    <nagEmailAddress>bertil@fam-karlsson.com</nagEmailAddress>
    <sourceDirectory>src/java</sourceDirectory>
    <unitTestSourceDirectory>src/test/java</unitTestSourceDirectory>
    <unitTest>
      <includes>
        <include>**/*Test.java</include>
      </includes>
      <excludes>
        <exclude>**/RepositoryTest.java</exclude>
      </excludes>
    </unitTest>
    <resources>
      <resource>
        <directory>src/conf</directory>
        <includes>
          <include>cma.xml</include>
          <include>cma-relay.xml</include>
          <include>cma-hunt.xml</include>
        </includes>
        <filtering>false</filtering>
      </resource>
      <resource>
        <directory>src/conf/stylesheets</directory>
        <includes>
          <include>*.xslt</include>
        </includes>
        <filtering>false</filtering>
      </resource>
      <resource>
        <directory>src/messages</directory>
        <targetPath>cma/messages</targetPath>
        <includes>
          <include>messages*.properties</include>
        </includes>
        <filtering>false</filtering>
      </resource>
    </resources>
  </build>
</project>

